{% extends 'base.html.twig' %}

{% block body %}

    <section class="section-products">
        <div class="container">
            <div class="row justify-content-center text-center">
                <div class="col-md-8 col-lg-6">
                    <div class="header">
                        <h2>{{ category.name }}</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                {% for article in category.articles %}
                    <div class="col-md-6 col-lg-4 col-xl-3">
                        <div id="product-1" class="single-product">
                            <div class="part-1">
                                <ul>
                                    <li><a href="{{ path('cart_add', {'idArticle': article.id}) }}"><i class="fas fa-shopping-cart"></i></a></li>
                                    <li>
                                        <a href="{{ path('article_show', {'categorySlug': article.category.name, 'articleSlug': article.slug}) }}"><i class="fas fa-info"></i></a>
                                    </li>
                                </ul>
                            </div>
                            <div class="part-2">
                                <h3 class="product-title">{{ article.name }}</h3>
                                <h4 class="product-old-price">$79.99</h4>
                                <h4 class="product-price">{{ (article.price/100) }} â‚¬</h4>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

{% endblock %}


