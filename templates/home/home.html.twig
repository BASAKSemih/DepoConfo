{% extends 'base.html.twig' %}

{% block body %}

    <section class="section-products">
        <div class="container">
            <div class="row justify-content-center text-center">
                <div class="col-md-8 col-lg-6">
                    <div class="header">
                        <h3>EN PROMOTION</h3>
                        <h2>Nos produits les plus populaires ! </h2>
                    </div>
                </div>
            </div>
            <div class="row">
                {% for article in bestarticles %}
                <div class="col-md-6 col-lg-4 col-xl-3">
                    <div id="product-1" class="single-product">
                        <div class="part-1" >
                            <img src="/uploads/{{ article.image }}" alt="{{ article.name }}" class="">
                            {% if article.oldPrice == 0 %}
                            {% else %}
                                <span class="discount">PROMOTION</span>
                            {% endif %}
                            <ul>
                                <li><a href="{{ path('cart_add', {'idArticle': article.id}) }}?stayHere=true"><i class="fas fa-shopping-cart"></i></a></li>
                                <li>
                                    <a href="{{ path('article_show', {'categorySlug': article.category.name, 'articleSlug': article.slug}) }}"><i class="fas fa-info"></i></a>
                                </li>
                            </ul>
                        </div>
                        <div class="part-2 b">
                            <h3 class="product-title">{{ article.name }}</h3>
                            <h4 class="product-price">{{ (article.price/100) }} €</h4>
                            {% if article.oldPrice == 0 %}
                            {% else %}
                                <h4 class="product-old-price">{{ (article.oldPrice/100) }} €</h4>
                            {% endif %}
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
    <hr>
    <section class="section-products">
        <div class="container">
            <div class="row justify-content-center text-center">
                <div class="col-md-8 col-lg-6">
                    <div class="header">
                        <h2>Tout nos produits</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                {% for article in articleRepository.findAll %}
                    <div class="col-md-6 col-lg-4 col-xl-3">
                        <div id="product-1" class="single-product">
                            <div class="part-1">
                                <img src="/uploads/{{ article.image }}" alt="{{ article.name }}" class="">
                                {% if article.oldPrice == 0 %}
                                {% else %}
                                    <span class="discount">PROMOTION</span>
                                {% endif %}
                                <ul>
                                    <li><a href="{{ path('cart_add', {'idArticle': article.id}) }}?stayHere=true"><i class="fas fa-shopping-cart"></i></a></li>
                                    <li>
                                        <a href="{{ path('article_show', {'categorySlug': article.category.name, 'articleSlug': article.slug}) }}"><i class="fas fa-info"></i></a>
                                    </li>
                                </ul>
                            </div>
                            <div class="part-2">
                                <h3 class="product-title">{{ article.name }}</h3>
                                <h4 class="product-price">{{ (article.price/100) }} €</h4>
                                {% if article.oldPrice == 0 %}
                                {% else %}
                                    <h4 class="product-old-price text-danger">{{ (article.oldPrice/100) }} €</h4>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

{% endblock %}


