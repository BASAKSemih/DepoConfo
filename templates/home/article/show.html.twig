{% extends 'base.html.twig' %}

{% block body %}
    <div class="container productshow">
        <div class="card">
            <div class="container-fliud">
                <div class="wrapper row">
                    <div class="preview col-md-6">

                        <div class="preview-pic tab-content">
                            <div class="tab-pane active" id="pic-1"> <img src="/uploads/{{ article.image }}" alt="{{ article.name }}" class=""></div>
                        </div>

                    </div>
                    <div class="details col-md-6">
                        <h3 class="product-title">{{ article.name}}</h3>
                        <p class="product-description">{{ article.description }}</p>
                        <h4 class="price">Prix : <span>{{ article.price | amount }}</span></h4>
                        <div class="action mt-5">
                          <ul>
                              <a href="{{ path('cart_add', {'idArticle': article.id}) }}" class="add-to-cart btn btn-default" type="button">
                                 Ajouter au Panier <li class="fas fa-shopping-cart"></li>
                              </a>
                          </ul>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}